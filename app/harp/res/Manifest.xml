    <controller name="com.yuyan.harp.MainController">
        <action url="get_salary.json" name="getSalary">
            <parameter name="uid" type="int"/>
            <parameter name="name" type="string"/>
            <parameter name="mail" type="string"/>
        </action>
        <action url="get_salary.json" name="getSalary">
            <parameter name="uid" type="int"/>
            <parameter name="name" type="string"/>
            <parameter name="mail" type="string"/>
